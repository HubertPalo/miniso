<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/angular-cookies.min.js"></script>
    
    <!--<script src="~/Angular/ArchivoAngular.js"></script>-->
    <script src="~/Angular/Modules/app.js"></script>
    <script src="~/Angular/Services/PostServices.js"></script>
    <script src="~/Angular/Controllers/UsersController.js"></script>
    <script src="~/Angular/Factories/UserFactory.js"></script>
    


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Nombre de aplicación", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                    <li>@Html.ActionLink("UsersController", "Index", "Users")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="/Login/Index">Log in</a></li>
                    <li><a href="/Login/Index">Registrarse</a></li>
                </ul>                
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - StackOverflow Clone - Nilrad</p>
        </footer>
    </div>

    
    @RenderSection("scripts", required: false)
</body>
</html>
